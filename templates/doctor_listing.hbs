---
{
    "stream": {
        "$id": "doctors_listing",
        "source": "knowledgeGraph",
        "destination": "pages",
      "filter": {
        "entityTypes": [
          "ce_doctorsepsevlisting"
        ],
      "savedFilterIds": [
        "1091553623"]
      },
      "fields": [
        "id",
        "uid",
        "meta",
        
        "name",
        "slug",
      
        "c_relatedProducts.name",
        "c_relatedProducts.slug"
        
      ],
      "localization": {
          "locales": ["en"]
      }
    },
    "urlFormat": "{{slug}}"
}
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{name}}</title>
    <meta name="description" content={{richTextDescription}}>
    {{>head}}
    <link href="https://fonts.googleapis.com/css?family=Work+Sans:200,400&display=swap" rel="stylesheet">
      <script src="https://assets.sitescdn.net/answers/v1/answerstemplates.compiled.min.js"></script>
    <script src="https://assets.sitescdn.net/answers/v1/answers.js"></script>
    <link
      rel="stylesheet"
      type="text/css"
      href="https://assets.sitescdn.net/answers/v1/answers.css"
    />
     <style>
      .answers-layout {
        max-width: 50rem;
        margin: auto;
      }
    </style>
</head>

<div class="container mx-auto px-4">
    <body>
        {{>navbar}}

            <body>
      <div class="answers-layout">
    <div class="searchbar-container"></div>
    <div class="navigation-container"></div>
    <div class="spellcheck-container"></div>
    <div class="universal-container"></div>
    <div class="vertical-results-container"></div>
    <div class="directanswer-container"></div>
   
  </div>
     <script>
      ANSWERS.init({
        apiKey: "547948deeab9d39c0be6eaf8d160b7be",
        experienceKey: "hospital",
        businessId: "3707346",
        experienceVersion: "STAGING",

        verticalPages: [
          {
            label: "All",
            url: "answer-hospital",
            isFirst: true,
            isActive: false,
            hideInNavigation: false
          },
          {
            label: "Doctor specialties",
            url: "/doctor_speclist",
            verticalKey: "doctor_specialties",
            icon: "pin",
            // iconUrl: "",
            isFirst: false,
            isActive: false,
            hideInNavigation: false
          },
          {
            label: "Doctor Services",
            url: "/doctor_services",
            verticalKey: "doctor_services",
            icon: "support",
        
            isFirst: false,
            isActive: false,
            hideInNavigation: false
          },
          {
            label: "Doctor",
            url: "/doctor",
            verticalKey: "doctor",
            icon: "pin",
            // iconUrl: "",
            isFirst: false,
            isActive: true,
            hideInNavigation: false
          },
          {
            label: "Locations",
            url: "/locations",
            verticalKey: "locations",
            icon: "pin",
            // iconUrl: "",
            isFirst: false,
            isActive: false,
            hideInNavigation: false
          }
        ],

         onReady: function () {
        // init components
        this.addComponent("SearchBar", {
          container: ".searchbar-container",
          allowEmptySearch: false
        });
        this.addComponent("Navigation", {
          container: ".navigation-container",
        });
        this.addComponent("SpellCheck", {
          container: ".spellcheck-container",
        });
        this.addComponent("DirectAnswer", {
          container: ".directanswer-container",
        });
        
        this.addComponent("UniversalResults", {
          container: ".universal-container",
          config: {
            //location data
           locations: {
              icon: "pin",
              card: {
                cardType: "Standard",
                dataMappings: {
                  title: (item) => item.name,
                  subtitle: (item) => item.address.line1,
                  details: (item) => item.description,
                  image: (item) =>
                    item.photoGallery ? item.photoGallery[0].image.url : null,
                  url: (item) =>item.slug
                },
               

                callsToAction: [
                 
                  {
                    label: "Get Directions",
                    icon: "directions",
                    url: "item.slug",
                    analyticsEventType: "GET_DIRECTIONS",
                    target: "_self"
                  },
                  {
                    label: "Call",
                    icon: "phone",
                    url: (item) => `tel:${ item.slug}`,
                    analyticsEventType: "TAP_TO_CALL"
                  }
                ]
              }
              
            },
            doctor_specialties: {
              icon: "support",
               card: {
                cardType: "Standard",
                dataMappings: {
                  title: (item) => item.name,
                  url: (item) =>item.slug,
                  itemTemplate: `<div>
                       {{{ item.richTextDescription }}}   
                        </div>`
                },
                
              }
            },
           
         doctor_services: {
              icon: "briefcase",
              card: {
                cardType: "Standard",
                dataMappings: {
                  title: (item) => item.name,
                  details: (item) => item.description, 
                    url: (item) =>item.slug

                },
               
              }
            },

            doctor: {
              icon: "briefcase",
              card: {
                cardType: "Standard",
                dataMappings: {
                  title: (item) => item.name, 
                   url: (item) =>item.slug
            
                },
               
              }
            }
                
          }
        });
        this.addComponent("LocationBias", {
          container: ".locationbias-container",
        });
      }
    });
    </script>
  </body>
        <br>
         <div class="container py-8 px-6 mx-auto">
            <div class="grid grid-cols-2 divide-x gap-3 pl-10">
               
                <div class="col-span-1">
                    <div class="container py-8 px-6 mx-auto">
                        
                       
                        {{#each c_relatedProducts}}
                         <div class="grid grid-cols-7 divide-gray-300 divide-y-4 gap-3 pl-10">
      <div class="col-span-5">
              <div class="container py-8 px-6 mx-auto">
                  <div>
                    <a class="uppercase tracking-wide no-underline hover:no-underline font-bold text-gray-800 text-2xl mb-8 hover:text-blue-900" href={{slug}}>{{name}}</a>
                    <br>
                     <div >
                        {{#each photoGallery}}
                        <img class="object-cover rounded-t-lg md:h-auto md:w-48 md:rounded-none" src="{{image.url}}">
                        
                        {{/each}}
                    
                  </div>

              </div>
          </div>
      </div>
                        {{/each}}
            </div>
    </body> 
   
</div>
</div>



 {{>footer}}
</html>
